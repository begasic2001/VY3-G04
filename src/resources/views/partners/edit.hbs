<div class="mt-4">
    <h3>Sửa Chuyến Đi</h3>
    <form action="/booking/{{bookings._id}}?_method=PUT" method="post" enctype='multipart/form-data'>
  <div class="form-group">
    <label for="exampleInputEmail1">Nơi Đi*</label>
    <input type="text" class="form-control" value="{{bookings.trip_details.pickup_location}}" id="pickup_location" name="pickup_location" >
  </div>
   <div class="form-group">
    <label for="exampleInputEmail1">Nơi Đến*</label>
    <input type="text" class="form-control" value="{{bookings.trip_details.dropoff_location}}" id="dropoff_location" name="dropoff_location" >
  </div>
    <div class="form-group">
    <label for="exampleInputEmail1">Ngày Đón*</label>
    <input type="text" class="form-control" value="{{bookings.trip_details.pickup_date}}" id="pickup_date" name="pickup_date" >
  </div>
    <div class="form-group">
    <label for="exampleInputEmail1">Giờ Đón*</label>
    <input type="text" class="form-control" value="{{bookings.trip_details.pickup_time}}" id="pickup_time" name="pickup_time" >
  </div>
   </div>
    <div class="form-group">
    <label for="exampleInputEmail1">Số Chuyến Bay*</label>
    <input type="text" class="form-control" value="{{bookings.trip_details.flight_number}}" id="flight_number" name="flight_number" >
  </div>
   </div>
    <div class="form-group">
    <label for="exampleInputEmail1">Số Lượng Khách*</label>
    <input type="text" class="form-control" value="{{bookings.trip_details.passengers_count}}" id="passengers_count" name="passengers_count" >
  </div>
     </div>
    <div class="form-group">
    <label for="exampleInputEmail1">Số Hành Lý*</label>
    <input type="text" class="form-control" value="{{bookings.trip_details.suitcases_count}}" id="suitcases_count" name="suitcases_count" >
  </div>
       </div>
    <div class="form-group">
    <label for="exampleInputEmail1">Loại Phương Tiện*</label>
    <input type="text" class="form-control" value="{{bookings.vehicle.selected_vehicle}}" id="selected_vehicle" name="selected_vehicle" >
  </div>
       </div>
    <div class="form-group">
    <label for="exampleInputEmail1">Giá*</label>
    <input type="text" class="form-control" value="{{bookings.vehicle.price}}" id="price" name="price" >
  </div>
       </div>
    <div class="form-group">
    <label for="exampleInputEmail1">Số Trẻ Em*</label>
    <input type="text" class="form-control" value="{{bookings.options.baby_seats}}" id="baby_seats" name="baby_seats" >
  </div>
       </div>
        <div class="form-group">
    <label for="exampleInputEmail1">Hình Ảnh*</label>
    <input type="file" class="" value="{{bookings.trip_details.image}}" id="image" name="image">{{bookings.trip_details.image}}
  </div>
     <div class="form-group retry">
    <label for="exampleInputEmail1">Khứ Hồi*</label>
    <input type="checkbox" class="form-control" id="roundtrip" name="roundtrip" {{#if bookings.trip_details.roundtrip }}  checked {{/if}} >
  </div>
  
      <div class="form-group retry">
          
    <label for="exampleInputEmail1">Ngày Về*</label>
    <input type="text" class="form-control" id="rt_return_date" name="rt_return_date" value="{{ bookings.trip_details.rt_return_date }}" >
    
  
  </div>
   
  <button type="submit" class="btn btn-primary">Cập Nhật</button>
</form>
</div>