      .form {
        background-color: green;
        border-radius: 5px;
        padding: 10px;
      }
      
      .form-collect {
        display: flex;
        flex-wrap: wrap;
      }

      .form-box {
        flex-basis: calc(100% / 4 - 10px);
        width: calc(100% / 4 - 10px);
      }

      .form-box + .form-box {
        margin-left: 10px;
      }

      .form-box select, .form-box input {
        width: 100%;
      }

      .form button {
        float: right;
      }

      .clear-both {
        clear: both;
      }

      .result-item {
        display: flex;
        height: 150px;
        padding: 10px;
        border: solid 1px #000;
      }

      .result-item + .result-item {
        margin-top: 10px;
      }

      .result-item__img {
        width: 30%;
      }
      
      .result-item__img img {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .result-item__content {
        display: flex;
        width: 70%;
        justify-content: space-between;
      }

      .result-item__box {
        display: flex;
      }

      .result-item__suit {
        margin-left: 10px;
      }
    </style>
